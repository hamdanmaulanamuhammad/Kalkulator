<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#FC575757">

    <!-- Display area -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="80dp">

        <TextView
            android:id="@+id/inputTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="17*64"
            android:textAlignment="textEnd"
            android:textColor="@color/white"
            android:textSize="45sp" />

        <TextView
            android:id="@+id/resultTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1088"
            android:textAlignment="textEnd"
            android:layout_marginTop="16dp"
            android:textSize="30sp"
            android:textColor="@color/blue" />
    </LinearLayout>

    <!-- Back button -->
    <ImageView
        android:id="@+id/backButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/baseline_arrow_back_24"
        android:layout_gravity="end"
        android:layout_marginTop="16dp" />

    <!-- Calculator buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="32dp"
        android:gravity="bottom">

        <!-- Row 1 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="20dp">

            <Button
                android:id="@+id/tombol7"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:text="7"
                app:backgroundTint="@null"
                android:textColor="@color/white"
                android:textSize="25sp"
                android:background="@drawable/tombol"
                android:layout_marginRight="10dp"/>

            <Button
                android:id="@+id/tombol8"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:text="8"
                android:textColor="@color/white"
                app:backgroundTint="@null"
                android:textSize="25sp"
                android:background="@drawable/tombol"
                android:layout_marginRight="10dp"/>

            <Button
                android:id="@+id/tombol9"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:text="9"
                android:textColor="@color/white"
                app:backgroundTint="@null"
                android:textSize="25sp"
                android:background="@drawable/tombol"
                android:layout_marginRight="10dp"/>

            <Button
                android:id="@+id/tombolBagi"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:text="/"
                android:textColor="@color/white"
                app:backgroundTint="@null"
                android:textSize="25sp"
                android:background="@drawable/tombol" />
        </LinearLayout>

        <!-- Row 2 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="20dp">

            <Button
                android:id="@+id/tombol4"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:text="4"
                android:textColor="@color/white"
                app:backgroundTint="@null"
                android:textSize="25sp"
                android:background="@drawable/tombol"
                android:layout_marginRight="10dp"/>

            <Button
                android:id="@+id/tombol5"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:text="5"
                android:textColor="@color/white"
                app:backgroundTint="@null"
                android:textSize="25sp"
                android:background="@drawable/tombol"
                android:layout_marginRight="10dp"/>

            <Button
                android:id="@+id/tombol6"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:text="6"
                android:textColor="@color/white"
                app:backgroundTint="@null"
                android:textSize="25sp"
                android:background="@drawable/tombol"
                android:layout_marginRight="10dp"/>

            <Button
                android:id="@+id/tombolKali"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:text="*"
                android:textColor="@color/white"
                app:backgroundTint="@null"
                android:textSize="25sp"
                android:background="@drawable/tombol" />
        </LinearLayout>

        <!-- Row 3 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="20dp">

            <Button
                android:id="@+id/tombol1"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:text="1"
                android:textColor="@color/white"
                app:backgroundTint="@null"
                android:textSize="25sp"
                android:background="@drawable/tombol"
                android:layout_marginRight="10dp"/>

            <Button
                android:id="@+id/tombol2"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:text="2"
                android:textColor="@color/white"
                app:backgroundTint="@null"
                android:textSize="25sp"
                android:background="@drawable/tombol"
                android:layout_marginRight="10dp"/>

            <Button
                android:id="@+id/tombol3"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:text="3"
                android:textColor="@color/white"
                app:backgroundTint="@null"
                android:textSize="25sp"
                android:background="@drawable/tombol"
                android:layout_marginRight="10dp"/>

            <Button
                android:id="@+id/tombolTambah"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:text="+"
                android:textColor="@color/white"
                app:backgroundTint="@null"
                android:textSize="25sp"
                android:background="@drawable/tombol" />
        </LinearLayout>

        <!-- Row 4 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="20dp">

            <Button
                android:id="@+id/tombolC"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:text="C"
                android:textColor="@color/red"
                app:backgroundTint="@null"
                android:textSize="25sp"
                android:background="@drawable/tombol"
                android:layout_marginRight="10dp"/>

            <Button
                android:id="@+id/tombol0"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:text="0"
                android:textColor="@color/white"
                app:backgroundTint="@null"
                android:textSize="25sp"
                android:background="@drawable/tombol"
                android:layout_marginRight="10dp"/>

            <Button
                android:id="@+id/tombolSamaDengan"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:text="="
                android:textColor="@color/white"
                app:backgroundTint="@null"
                android:textSize="25sp"
                android:background="@drawable/tombol"
                android:layout_marginRight="10dp"/>

            <Button
                android:id="@+id/tombolKurang"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:text="-"
                android:textColor="@color/white"
                app:backgroundTint="@null"
                android:textSize="25sp"
                android:background="@drawable/tombol" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
